{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es6",
		"allowJs": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true,
		"esModuleInterop": true
		//"downlevelIteration": true,
		//"importHelpers": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}

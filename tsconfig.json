{
	"compilerOptions": {
		"lib": ["es5", "es6", "DOM", "DOM.Iterable", "ES2015", "ScriptHost"],
		"target": "es6",
		"allowJs": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"typeRoots": ["node_modules/@types/"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "node_modules/knex/types/index.d.ts"]
}
